{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "rootDir": ".",
    "outDir": "./dist",
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests"]
}